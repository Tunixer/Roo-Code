		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.10",
		"@dotenvx/dotenvx": "^1.34.0",
		"@vscode/vsce": "3.3.2",
		"esbuild": "^0.25.0",
		"eslint": "^9.27.0",
		"husky": "^9.1.7",
		"knip": "^5.44.4",
		"lint-staged": "^16.0.0",
		"mkdirp": "^3.0.1",
		"only-allow": "^1.2.1",
		"ovsx": "0.10.4",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.3",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,css,md}": [
			"prettier --write"
		]
	}
}
